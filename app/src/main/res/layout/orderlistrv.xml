<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rvid"
            android:src="@drawable/shirt"
            android:layout_margin="7dp"

            android:background="@drawable/ed_bg"
            android:padding="5dp"

            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"

            android:layout_toRightOf="@+id/rvid"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/orderCodeId"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Name"
            android:layout_below="@+id/orderCodeId"
            android:layout_toRightOf="@+id/rvid"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:id="@+id/ownerNameId"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Mobile"
            android:layout_below="@+id/ownerNameId"
            android:layout_toRightOf="@+id/rvid"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:id="@+id/ownerPhoneId"
            ></TextView>
        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="1"
            android:textSize="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/orderNo"
            ></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
